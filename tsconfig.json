{
	"compilerOptions": {
		"jsx": "preserve",
		"target": "es6",
		"module": "es2015",
		// "noImplicitAny": true,
    "noUnusedParameters": true,
		"removeComments": true,
		"experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true
	},
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true,
    "emitRequireType": false
  },
  "include": [
    "./declarations.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

{
	"compilerOptions": {
		"jsx": "preserve",
		"target": "es5",
		"module": "es2015",
		// "noImplicitAny": true,
    "noUnusedParameters": true,
		"removeComments": true,
		"experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true
	},
  "transpileOnly": true,
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "forkChecker": true,
    "forkCheckerSilent": true
  },
  "include": [
    "./declarations.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

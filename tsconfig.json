{
	"compilerOptions": {
		"jsx": "react",
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
		"removeComments": true,
		"experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
	},
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "forkChecker": true,
    "forkCheckerSilent": true
  },
  "exclude": [
    "node_modules"
  ]
}
